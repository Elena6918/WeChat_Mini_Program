/* pages/play/play.wxss */
.grid-container {
    display: grid;
    grid-template-columns: auto auto;
    grid-gap: 10px;
    padding: 2%;
    margin: 2%;
    background-color: lightblue;
}

.block {
    display: grid;
    background-color: white;
    width: 100%;
    height: 100%;
    border-radius: 2px;
}


